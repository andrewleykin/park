.wrapper 
	height 100%
	min-height 650px
	display flex
	justify-content space-between
	flex-direction column
	padding-top rem(55px)
	padding-bottom rem(110px)
	position relative
	trs()
	transition-duration .5s
	z-index 10
	@media(max-width: 700px)
		padding-top rem(30px)
	@media(max-height: 800px)
		padding-top rem(25px)
		padding-bottom rem(80px)

.wrapper--main
	background none !important
	.footer__item
		cursor pointer

.wrapper--object
	overflow hidden
	.footer__list
		transform rotate(-90deg) translateX(25%)

.wrapper--green
	background url("../img/general/main-bg.jpg") center no-repeat
	background-size cover 
	.layer--green
		img
			visibility visible


.wrapper--blue
	background url("../img/general/main-bg__2.jpg") center no-repeat
	background-size cover 
	.menu__link:before 
		background blueColor
	.footer__item--active 
		border-bottom-color: blueColor
	.about__part:before 
		background blueColor 
	.about__link:hover 
		color blueColor
	.layer--blue
		img
			visibility visible
	.object__btn
		background blueColor
		&:hover
			background darken(blueColor, 20%)
	.object__dot
		background blueColor
		&:hover
			background darken(blueColor, 20%)

// wrap

.wrap
	position absolute
	z-index 5
	width 100%
	height 100%
	min-height 650px
	overflow hidden

.layer
	position absolute
	width 100%
	height 100%
	img
		width 100%
		min-width 1400px 
		transform scale(1.5)
		visibility hidden
		trs()

.layer--blue
	img
		visibility hidden