.header
	color white

.header__row
	display flex
	justify-content space-between
	align-items center
	padding-right rem(40px)
	@media(max-width: 700px) 
		padding-right 0
		flex-direction column

.header__logo
	color white
	text-transform uppercase
	font-size rem(40px)
	font-weight 900
	margin 0
	letter-spacing 3px
	@media(max-width: 700px)
		margin-bottom 10px
	@media(max-width: 480px)
		font-size rem(30px)